<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/layoutScroll" android:layout_width="fill_parent"
		android:layout_height="wrap_content">
	<LinearLayout 
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:background="#FFFFFF"
		android:layout_gravity="center_horizontal" android:id="@+id/layoutQuestion">
		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="" />
		<TableLayout android:id="@+id/tableLayout1"
			android:layout_width="fill_parent" android:gravity="center_vertical"
			android:padding="3dip" android:background="#4cc417"
			android:paddingLeft="50px" android:layout_above="@+id/linearLayout3"
			android:layout_alignParentLeft="true" android:layout_marginBottom="24dp"
			android:layout_height="wrap_content">
			<TableRow android:layout_height="wrap_content" android:id="@+id/tableRow1"
				android:layout_width="fill_parent">
				<TextView android:textColor="#FFFFFF"
					android:textAppearance="?android:attr/textAppearanceLarge"
					android:layout_height="wrap_content" android:padding="3dip"
					android:layout_gravity="center_horizontal" android:layout_width="wrap_content"
					android:text="Quiz Code : "></TextView>
			</TableRow>
			<TableRow android:layout_height="wrap_content" android:id="@+id/tableRow1"
				android:layout_width="fill_parent">
				<TextView android:textColor="#FFFFFF"
					android:textAppearance="?android:attr/textAppearanceLarge"
					android:layout_height="wrap_content" android:padding="3dip"
					android:layout_gravity="center_horizontal" android:layout_width="wrap_content"
					android:id="@+id/txtQuizCode" android:layout_span="2"></TextView>
			</TableRow>
			<TableRow android:layout_height="wrap_content" android:id="@+id/tableRow2"
				android:layout_width="wrap_content">
				<TextView android:textColor="#FFFFFF"
					android:textAppearance="?android:attr/textAppearanceLarge"
					android:layout_height="wrap_content" android:padding="3dip"
					android:layout_gravity="left" android:layout_width="wrap_content"
					android:text="Question# : "></TextView>
				<TextView android:textColor="#FFFFFF"
					android:textAppearance="?android:attr/textAppearanceLarge"
					android:layout_height="wrap_content" android:padding="3dip"
					android:layout_gravity="left" android:layout_width="wrap_content"
					android:id="@+id/txtQuestionNo"></TextView>
			</TableRow>
			<TableRow android:layout_height="wrap_content" android:id="@+id/tableRow3"
				android:layout_width="wrap_content"></TableRow>
			<TableRow android:layout_height="wrap_content" android:id="@+id/tableRow4"
				android:layout_width="wrap_content">
			</TableRow>
		</TableLayout>
		<LinearLayout android:layout_gravity="center_horizontal"
			android:id="@+id/linearLayout1" android:layout_height="wrap_content"
			android:orientation="horizontal" android:layout_width="match_parent">
			<ImageView android:src="@drawable/back" android:id="@+id/imgBack"
				android:layout_height="wrap_content" android:layout_width="wrap_content"></ImageView>
			<ImageView android:src="@drawable/next" android:id="@+id/imgNext"
				android:layout_height="wrap_content" android:layout_width="wrap_content"></ImageView>
		</LinearLayout>
		<LinearLayout android:layout_width="match_parent"
			android:id="@+id/linearLayout1" android:layout_height="wrap_content">
			<TextView android:text="Question" android:layout_width="wrap_content"
				android:id="@+id/textView1" android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_height="wrap_content" android:textColor="#aabbcc"></TextView>
		</LinearLayout>
		<LinearLayout android:layout_width="match_parent"
			android:id="@+id/linearLayout1" android:layout_height="wrap_content">
			<EditText android:id="@+id/txtQuizDescription"
				android:layout_width="match_parent" android:layout_height="200px">
				<requestFocus></requestFocus>
			</EditText>
		</LinearLayout>
		<LinearLayout android:layout_width="match_parent"
			android:id="@+id/linearLayout1" android:layout_height="wrap_content">
			<TextView android:text="Answers" android:layout_width="wrap_content"
				android:id="@+id/textView1" android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_height="wrap_content" android:textColor="#aabbcc"></TextView>
		</LinearLayout>
		<ImageView android:id="@+id/imgAddQuiz" android:src="@drawable/img_add_quiz"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"></ImageView>
		
	</LinearLayout>
</ScrollView>

